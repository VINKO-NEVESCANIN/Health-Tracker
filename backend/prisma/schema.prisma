generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())

  patients  Patient[]
}

model Patient {
  id           Int       @id @default(autoincrement())
  nombre       String
  apellido     String
  edad         Int
  telefono     String?
  direccion    String?
  email        String? @unique
  createdAt    DateTime @default(now())

  doctorId     Int
  doctor       User      @relation(fields: [doctorId], references: [id])

  medications  PatientMedication[]
  studies      Study[]
  vitals       Vital[]
  crisis       Crisis[]
  appointments Appointment[]
}

model Medication {
  id           Int       @id @default(autoincrement())
  nombre       String
  descripcion  String?
  patients     PatientMedication[]
}

model PatientMedication {
  id           Int      @id @default(autoincrement())
  patientId    Int
  medicationId Int
  dosis        String?
  intervalo    String?

  patient      Patient     @relation(fields: [patientId], references: [id])
  medication   Medication  @relation(fields: [medicationId], references: [id])
}

model Study {
  id        Int      @id @default(autoincrement())
  patientId Int
  tipo      String
  fecha     DateTime @default(now())
  notas     String?

  patient   Patient @relation(fields: [patientId], references: [id])
}

model Vital {
  id        Int      @id @default(autoincrement())
  patientId Int
  fecha     DateTime @default(now())
  heartRate Int?
  oxygen    Int?
  temp      Float?

  patient   Patient @relation(fields: [patientId], references: [id])
}

model Crisis {
  id        Int      @id @default(autoincrement())
  patientId Int
  fecha     DateTime @default(now())
  notas     String?

  patient   Patient @relation(fields: [patientId], references: [id])
}

model Appointment {
  id        Int      @id @default(autoincrement())
  patientId Int
  doctorId  Int
  fecha     DateTime
  notas     String?

  patient   Patient @relation(fields: [patientId], references: [id])
  doctor    User    @relation(fields: [doctorId], references: [id])
}
